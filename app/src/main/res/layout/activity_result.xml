<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_result"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="40dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/textView_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="center"
                    app:fabSize="normal"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/ic_web" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:visibility="gone"
                    android:id="@+id/fab_phone"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="center"
                    app:fabSize="normal"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/ic_phone" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:visibility="gone"
                    android:id="@+id/fab_sms"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="center"
                    app:fabSize="normal"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/ic_message" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:visibility="gone"
                    android:id="@+id/fab_mail"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="center"
                    app:fabSize="normal"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/ic_mail" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    app:fabSize="normal"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/ic_copy"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:scaleType="center"
                    />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button8"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    app:fabSize="normal"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/ic_save"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:scaleType="center"
                    />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button3"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    app:fabSize="normal"
                    app:maxImageSize="40dp"
                    app:srcCompat="@drawable/ic_share"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:scaleType="center"
                    />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="center"
                app:backgroundTint="@color/colorWhite"
                app:fabSize="normal"
                app:maxImageSize="44dp"
                app:srcCompat="@drawable/ic_add" />
            <LinearLayout
                android:layout_marginTop="32dp"
                android:id="@+id/linear_banner_ads_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    ads:adSize="SMART_BANNER"
                    ads:adUnitId="ca-app-pub-3332967002509193/5717742602">
                </com.google.android.gms.ads.AdView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>